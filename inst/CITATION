citHeader("To cite glottospace in publications use:")

citEntry(entry = "Unpublished",
  title        = "glottospace: R package for the geospatial analysis of linguistic and cultural data",
  author       = personList(as.person("Sietze Norder") ),
  journal      = "",
  year         = "",
  volume       = "",
  number       = "",
  pages        = "",
  note         = "Manuscript under preparation",
  url          = "https://github.com/SietzeN/glottospace",

  textVersion =
  paste("Norder, S.J. et al. (2022).",
        "glottospace: R package for the geospatial analysis of linguistic and cultural data.",
         "URL https://github.com/SietzeN/glottospace.")
)
